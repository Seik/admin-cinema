<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
    <children>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Compras">
                    <content>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Día">
                                    <graphic>
                                        <DatePicker fx:id="dateSelector" onAction="#onDateSelected" />
                                    </graphic>
                                </Label>
                                <Label text="Película">
                                    <graphic>
                                        <ComboBox fx:id="movieSelector" onAction="#onMovieSelected" prefWidth="150.0" />
                                    </graphic>
                                </Label>
                                <Label text="Hora">
                                    <graphic>
                                        <ComboBox fx:id="hourSelector" onAction="#onHourSelected" prefWidth="150.0" />
                                    </graphic>
                                </Label>
                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Button fx:id="reservationButton" mnemonicParsing="false" onAction="#onReservation" text="Reserva" />
                                        <Button fx:id="purchaseButton" mnemonicParsing="false" onAction="#onPurchase" text="Compra" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Estadísticas">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
